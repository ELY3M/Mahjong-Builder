<?xml version="1.0" encoding="utf-8"?>

<resources>

	<style name="MyCustomTheme" parent="Theme.Material3.Dark">
		<item name="android:textColor">@color/white</item>
		<item name="android:buttonTint">@color/white</item>
		<item name="colorPrimary">@color/black</item>
		<item name="colorPrimaryDark">@color/black</item>
		<item name="colorAccent">@color/black</item>
		<item name="popupMenuBackground">?attr/colorPrimary</item>
		<item name="android:windowBackground">@color/black</item>
		<item name="android:statusBarColor">@color/black</item>
		<item name="windowActionModeOverlay">true</item>
		<!-- Navigation drawer background -->
		<item name="colorSurface">?attr/colorPrimaryDark</item>
	</style>



	<style name="statistics_left_text">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:padding">8dip</item>
		<item name="android:background">"#000000"</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>

	<style name="statistics_right_text">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
		<item name="android:padding">8dip</item>
		<item name="android:background">"#000000"</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>


</resources>